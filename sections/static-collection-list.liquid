<script type="application/pxs-animation-mapping+json">
  {
    "blocks": [
      ".collection-list-page__wrapper"
    ],
    "elements": [
      ".collection-list-item"
    ]
  }
</script>

<section class="collection-list-page collection-list--{{ section.settings.columns }}-columns">
  <div class="collection-list-page__header">
    <h1>{{ 'collections.title' | t }}</h1>
  </div>

  <div class="collection-list-page__wrapper" style="--collection-list-columns-setting: {{ section.settings.columns }};">
    {% if section.settings.display_type == 'all' %}
      {% case section.settings.sort %}
        {% when 'products_high' or 'products_low' %}
          {%- assign collections = collections | sort: 'all_products_count' -%}
        {% when 'date' or 'date_reversed' %}
          {%- assign collections = collections | sort: 'published_at' -%}
      {% endcase %}
      {% if section.settings.sort == 'products_low' or section.settings.sort == 'date' or section.settings.sort == 'alphabetical' %}
        {% for collection in collections %}
          {%
            render 'collection-list-item',
            collection: collection,
            show_title: section.settings.show_title,
            show_product_count: section.settings.show_product_count,
            show_description: section.settings.show_description,
            item_style: section.settings.item_style
          %}
        {% endfor %}
      {% else %}
        {% for collection in collections reversed %}
          {%
            render 'collection-list-item',
            collection: collection,
            show_title: section.settings.show_title,
            show_product_count: section.settings.show_product_count,
            show_description: section.settings.show_description,
            item_style: section.settings.item_style
          %}
        {% endfor %}
      {% endif %}
    {% else %}
      {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%
            render 'collection-list-item',
            collection: collection,
            show_title: section.settings.show_title,
            show_product_count: section.settings.show_product_count,
            show_description: section.settings.show_description,
            item_style: section.settings.item_style,
            block: block,
          %}
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.collection_list.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.collection_list.paragraph.content"
    },
    {
      "type": "radio",
      "id": "display_type",
      "label": "t:sections.collection_list.display_type.label",
      "options": [
        { "value": "all", "label": "t:sections.collection_list.display_type.option_1" },
        { "value": "selected", "label": "t:sections.collection_list.display_type.option_2" }
      ],
      "default": "all"
    },
    {
      "type": "select",
      "id": "sort",
      "label": "t:sections.collection_list.sort.label",
      "options": [
        {
          "value": "products_high",
          "label": "t:sections.collection_list.sort.option_1"
        },
        {
          "value": "products_low",
          "label": "t:sections.collection_list.sort.option_2"
        },
        {
          "value": "alphabetical",
          "label": "t:sections.collection_list.sort.option_3"
        },
        {
          "value": "alphabetical_reversed",
          "label": "t:sections.collection_list.sort.option_4"
        },
        {
          "value": "date",
          "label": "t:sections.collection_list.sort.option_5"
        },
        {
          "value": "date_reversed",
          "label": "t:sections.collection_list.sort.option_6"
        }
      ],
      "default": "alphabetical",
      "info": "t:sections.collection_list.sort.info"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "t:sections.collection_list.columns.label",
      "default": 4
    },
    {
      "id": "item_style",
      "type": "select",
      "label": "t:sections.collection_list.item_style.label",
      "options": [
        {
          "value": "natural",
          "label": "t:sections.collection_list.item_style.option_1"
        },
        {
          "value": "small",
          "label": "t:sections.collection_list.item_style.option_2"
        },
        {
          "value": "medium",
          "label": "t:sections.collection_list.item_style.option_3"
        },
        {
          "value": "large",
          "label": "t:sections.collection_list.item_style.option_4"
        }
      ],
      "default": "natural"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "t:sections.collection_list.show_title.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "t:sections.collection_list.show_product_count.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "t:sections.collection_list.show_description.label",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "t:sections.collection_list.blocks.collection.name",
      "settings": [
        {
          "id": "collection",
          "type": "collection",
          "label": "t:sections.collection_list.blocks.collection.collection.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "collection"
      },
      {
        "type": "collection"
      }
    ]
  }
}

{% endschema %}