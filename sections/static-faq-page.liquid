<script
  type="application/json"
  data-section-type="static-page-faq"
  data-section-id="{{ section.id }}"
>
</script>


<section class="faq-page__wrapper">
  <div
    class="
      faq-page
      faq-page--align-{{ section.settings.text_alignment }}
      faq-page--width-{{ section.settings.page_width }}
    "
  >
    <div class="faq-page__header">
      <h1>{{ page.title }}</h1>
    </div>

    <div class="faq__content" data-rich-text-area>
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.faq_page.name",
  "settings": [
    {
      "type": "select",
      "id": "page_width",
      "label": "t:sections.faq_page.page_width.label",
      "options": [
        {
          "label": "t:sections.faq_page.page_width.option_1",
          "value": "regular"
        },
        {
          "label": "t:sections.faq_page.page_width.option_2",
          "value": "wide"
        },
        {
          "label": "t:sections.faq_page.page_width.option_3",
          "value": "full"
        }
      ],
      "default": "regular"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "t:sections.faq_page.text_alignment.label",
      "default": "center"
    }
  ]
}

{% endschema %}